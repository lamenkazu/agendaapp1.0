<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda App</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,400;0,700;1,400&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <a href="/">
            <h1>Agenda App</h1>
        </a>
    </header>

    <section id='menu'>
        <input type="checkbox" id="menuchec">
        <label id='menulabel' for="menuchec">
            <img src="/img/menu.png" id='menuicon' alt="">
        </label>
        <nav>
            <ul id='menulista'>
                <li><a href="/">Agendamento</a></li>
                <li><a href="/consultas">Consultas Agendadas</a></li>
                <li><a href="/historico">Histórico de Consultas</a></li>
            </ul>
        </nav>
    </section>

    <main class="container">
        <section class='card' id='consultas'>
            <div>
                <h2>Lista de Consultas:</h2>

                <%consultas.forEach((consulta)=>{%>
                    <!-- comando EJS -->

                    <div class="consulta">
                        <div class="id column">
                            <%= consulta.id_consulta %>
                        </div>
                        <div class="status">
                            <%= consulta.status %>
                        </div>
                        <br>
                        <div class="name column">
                            <%= consulta.nome %>
                        </div>
                        <div class='column'> <small>
                                <%= consulta.telefone %>
                            </small> </div>
                        <div class="procedimento">
                            <p>
                                <%= consulta.procedimento %>
                            </p>
                        </div>
                        <div class="prazo column">
                            <span>Prazo:</span>
                            <p>
                                <%= consulta.informe %>
                            </p>
                        </div>
                        <div class="valor column">
                            <span>Valor:</span>
                            <p>R$<%= consulta.valor %>,00</p>
                        </div>
                        <div class="actions">
                            <a href="/consultas/<%= consulta.id_consulta %>" class="button white edit"
                                title="Editar Consulta">
                                <img src="/img/edit.png" alt="Editar Consulta" />
                            </a>

                            <a onclick="abrirModal()" type='submit' class="button white delete"
                                title="Excluir Consulta">
                                <img src="/img/apagar.png" alt="Excluir Consulta" />
                            </a>

                        </div>
                    </div>

                    <%}) %>
                        <!--fim comando EJS -->



        </section>

        <section>
            <%consultas.forEach((consulta)=>{%>

                <div class="modal-wrapper">
                    <div class="modal">
                        <img id='img-modal' src="/img/apagar.png" alt="Excluir Consulta" title="Excluir Consulta" />
                        <h3>Excluir Consulta</h3>
                        <p>Quer mesmo excluir essa consulta? <br />
                            Ela será apagada para sempre.
                        <p>
                        <footer>

                            <a id='btn-cancell' onclick="fecharModal()">Cancelar</a>
                            <button class="button red" type="submit" form="apagar">Excluir Consulta</button>
                        </footer>
                        <form method="post" action="/consultas/delete/<%= consulta.id_consulta %>" id="apagar">

                        </form>
                    </div>

                </div>
                <%}) %>
        </section>


    </main>



    </main>

    <footer>

    </footer>

    <script src="/scripts/script.js"></script>
</body>

</html>